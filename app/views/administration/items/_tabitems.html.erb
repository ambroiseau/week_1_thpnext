<%@items = @items.sort_by { |elem| elem[:id]} %>
<%@items.each do |elem|%>    							
	<tr>
		<%=form_for elem, url: administration_item_path(elem) do |f| %>
		<th><%= elem.name %></th>		
		<th><%= elem.original_price %></th>

		<% if current_admin %>
			<th><%= f.number_field :discount_percentage, class: 'form-control' %></th>
			<th><%= elem.price %></th>
			<th><%= f.submit 'Modifier', class: 'btn btn-dark' %>
		<%else current_user %>
			<th><%= elem.discount_percentage %></th>
			<th><%= elem.price %></th>
			<th><%= f.submit 'Acheter', class: 'btn btn-dark' %>
		<%end%>
		</th>
		<%end%>
	</tr>
<%end%>